@model Caterers.Models.Booking
@{
    ViewData["Title"] = "Create Booking";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Create Booking</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="UserId" />
    <div>
        <label>User Name</label>
        <input type="text" value="@User.Identity.Name" disabled />
    </div>
    <div class="form-group">
        <label asp-for="CatererId" class="control-label">Caterer</label>
        <select asp-for="CatererId" class="form-control" asp-items="ViewBag.Caterers"></select>
        <span asp-validation-for="CatererId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EventDate" class="control-label"></label>
        <input asp-for="EventDate" class="form-control" type="date" />
        <span asp-validation-for="EventDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumberOfGuests" class="control-label"></label>
        <input asp-for="NumberOfGuests" class="form-control" type="number" />
        <span asp-validation-for="NumberOfGuests" class="text-danger"></span>
    </div>
    <!-- Other fields for Booking here -->
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

